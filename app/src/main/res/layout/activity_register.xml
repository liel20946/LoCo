<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BaseColor"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">
    </include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">


       <EditText
        android:id="@+id/UserRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:textCursorDrawable="@drawable/mycursor"
        android:hint="User Name"
        android:textColor="@color/LoCoOrange"
        android:singleLine="true"
        android:nextFocusDown="@+id/PassRS"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="14dp">
    </EditText>


       <EditText
        android:id="@+id/PassRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@drawable/mycursor"
        android:backgroundTint="@color/LoCoOrange"
        android:hint="Password"
        android:singleLine="true"
        android:nextFocusDown="@+id/FnameRS"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="16dp">

    </EditText>


       <EditText
        android:id="@+id/FnameRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:singleLine="true"
        android:nextFocusDown="@+id/LnameRS"
        android:textCursorDrawable="@drawable/mycursor"
        android:hint="First Name"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="16dp" />


       <EditText
        android:id="@+id/LnameRS"
        android:singleLine="true"
        android:nextFocusDown="@+id/AgeRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:hint="Last Name"
        android:textColor="@color/LoCoOrange"
        android:textCursorDrawable="@drawable/mycursor"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="16dp" />


       <EditText
        android:id="@+id/AgeRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:hint="Age"
        android:singleLine="true"
        android:nextFocusDown="@+id/HomeRS"
        android:textCursorDrawable="@drawable/mycursor"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="16dp" />


       <EditText
        android:id="@+id/HomeRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:hint="Home Adress"
        android:singleLine="true"
        android:nextFocusDown="@+id/AnswerRS"
        android:textCursorDrawable="@drawable/mycursor"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
           android:layout_marginTop="16dp" />


       <EditText
        android:id="@+id/AnswerRS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/LoCoOrange"
        android:hint="Email Adress"
        android:singleLine="true"
        android:nextFocusDown="@+id/IdNum"
        android:textCursorDrawable="@drawable/mycursor"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
        android:layout_weight="0.05"
           android:layout_marginTop="16dp" />
       <EditText
           android:id="@+id/IdNum"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/LoCoOrange"
           android:hint="id number"
           android:singleLine="true"
           android:imeOptions="actionDone"
           android:nextFocusDown="@+id/Registerbtn"
           android:textCursorDrawable="@drawable/mycursor"
           android:textColor="@color/LoCoOrange"
           android:textColorHint="@color/LoCoOrange"
           android:layout_weight="0.05"
           android:layout_marginTop="16dp" />
       <Button
           android:id="@+id/Registerbtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:background="@color/appBarC"
           android:onClick="RegisterF"
           android:text="Register"
           android:textColor="#fff"
           android:layout_marginTop="24dp" />

   </LinearLayout>
    </ScrollView>



</LinearLayout>

