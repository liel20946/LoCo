<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:id="@+id/navfdrawerid"
    tools:context="com.example.user.loco.NavigationDrawerFragment"
    android:background="#139ade"
    android:scaleType="centerCrop">



    <!-- TODO: Update blank fragment layout -->

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/imageView2"
        android:background="@drawable/loco_defback" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@color/white"
        app:civ_border_width="2dp"
        app:civ_border_color="#00000000"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="90000dp"
        android:id="@+id/fragDrawerList"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:background="@color/BaseColor"
        android:divider="@color/reallyDark" />

</RelativeLayout>
