<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/list_item"
    android:gravity="center_vertical"
    android:background="@color/BaseColor"
    android:weightSum="1"
    android:paddingTop="2dp"
    android:paddingBottom="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_black_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blackk"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UnReadNum"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/circle_bg"
        android:text="  2"
        android:paddingTop="1dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lastMessTime"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastMess"
        android:layout_gravity="center_vertical"
        android:textColor="@color/appBarC"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageViewf"
        android:gravity="left"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/friend_item_text_view"
        android:text="This One Is New..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastMessTime"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textColor="@color/LoCoOrange"
        android:textSize="12sp"
        android:layout_marginRight="2sp"
        android:layout_alignTop="@+id/friend_item_text_view"
        android:layout_alignEnd="@+id/lastMess"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:layout_below="@+id/friend_item_text_view"
        android:text="xx:xx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/friend_item_text_view"
        android:layout_alignTop="@+id/imageViewf"
        android:layout_alignStart="@+id/lastMess"
        android:textColor="@color/textColorL"
        android:layout_toStartOf="@+id/muteIV"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/muteIV"
        android:layout_alignBottom="@+id/friend_item_text_view"
        android:layout_toStartOf="@+id/lastMessTime"
        android:layout_alignTop="@+id/friend_item_text_view"
        android:layout_marginLeft="6dp" />

</RelativeLayout>