<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/list_item"
    android:gravity="center_vertical"
    android:background="@color/BaseColor"
    android:weightSum="1"
    android:paddingTop="2dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Groups"
        android:id="@+id/TempL"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        android:background="@drawable/box"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/TempL"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewf"
        android:layout_width="50dp"

        android:layout_height="50dp"
        android:src="@drawable/ic_group_orange_48dp"
        app:civ_fill_color="@color/appBarC"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/blackk"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UnReadNum"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/circle_bg"
        android:text="  2"
        android:layout_alignEnd="@+id/gLastM"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/gLastT"
        android:paddingTop="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gLastM"
        android:layout_gravity="center_vertical"
        android:textColor="@color/appBarC"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@+id/imageViewf"
        android:gravity="left"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/list_item_text_view"
        android:text="You Were Added to This Group..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gLastT"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textColor="@color/LoCoOrange"
        android:textSize="12sp"
        android:layout_marginRight="2sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/list_item_text_view"
        android:layout_below="@+id/list_item_text_view"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:text="xx:xx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/TempL"
        android:id="@+id/list_item_text_view"
        android:layout_alignTop="@+id/imageViewf"
        android:textColor="@color/textColorL"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_alignStart="@+id/gLastM"
        android:layout_toStartOf="@+id/MuteIV"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/MuteIV"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/TempL"
        android:layout_alignTop="@+id/list_item_text_view"
        android:layout_toStartOf="@+id/gLastT"
        android:layout_alignBottom="@+id/list_item_text_view" />

</RelativeLayout>