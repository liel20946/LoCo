<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.loco.Recovery"
    android:background="@color/BaseColor">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">
    </include>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecUser"
        android:layout_marginTop="43dp"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
        android:backgroundTint="@color/appBarC"
        android:hint="Enter Your User Name..."
        android:textCursorDrawable="@drawable/mycursor"
        android:singleLine="true"
        android:nextFocusDown="@+id/RecAns"
        android:layout_below="@+id/app_bar"
        android:layout_alignEnd="@+id/RecBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecAns"
        android:textColor="@color/LoCoOrange"
        android:textColorHint="@color/LoCoOrange"
        android:backgroundTint="@color/appBarC"
        android:textCursorDrawable="@drawable/mycursor"
        android:hint="Enter Your Email Adress..."
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="33sp"
        android:layout_below="@+id/RecUser"
        android:layout_alignStart="@+id/RecUser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Information"
        android:id="@+id/RecBtn"
        android:layout_marginBottom="63sp"
        android:background="@color/appBarC"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="RecDone" />
</RelativeLayout>
